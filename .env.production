# Backend (PRODUCTION - MUST SET STRONG SECRETS)
# Generate a new secret: openssl rand -base64 32
DB_USERNAME=CHANGE_THIS_IN_PRODUCTION
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_32_CHAR_SECRET_VIA_OPENSSL_RAND_BASE64_32
JWT_EXPIRATION=86400000
SPRING_PROFILES_ACTIVE=prod

# Admin User (PRODUCTION - MUST CHANGE)
# Generate password hash: htpasswd -bnBC 10 "" your_password | tr -d ':\\n' | sed 's/$2y/$2a/'
# IMPORTANT: Escape $ as $$ in the hash for docker-compose (e.g., $2a$10$xxx becomes $$2a$$10$$xxx)
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD_HASH=CHANGE_THIS_TO_BCRYPT_HASH_WITH_ESCAPED_DOLLARS
ADMIN_FULL_NAME=Admin User

# Frontend
VITE_API_BASE_URL=https://your-domain.com/api
