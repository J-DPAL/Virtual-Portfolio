# Environment variables template for deployment
# Copy to .env and fill in real values for your environment

# Backend (required for non-dev profiles)
DB_USERNAME=CHANGE_THIS_USERNAME
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_32_CHAR_SECRET
JWT_EXPIRATION=86400000
SPRING_PROFILES_ACTIVE=prod

# Admin User
# Generate password hash using: htpasswd -bnBC 10 "" your_password | tr -d ':\n' | sed 's/$2y/$2a/'
# Or use online BCrypt generator with cost factor 10
# IMPORTANT: Escape $ as $$ in the hash for docker-compose (e.g., $2a$10$xxx becomes $$2a$$10$$xxx)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=CHANGE_THIS_TO_BCRYPT_HASH_WITH_ESCAPED_DOLLARS
ADMIN_FULL_NAME=Admin User

# Email Configuration (for contact form notifications)
# For Gmail: Enable 2FA and generate an App Password at https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# Contact form anti-spam protection (messages-service)
TURNSTILE_ENABLED=true
TURNSTILE_SECRET_KEY=CHANGE_THIS_TO_TURNSTILE_SECRET_KEY
TURNSTILE_MIN_SCORE=0.5
CONTACT_IP_HASH_SALT=CHANGE_THIS_TO_RANDOM_IP_HASH_SALT

# Frontend
VITE_API_BASE_URL=http://localhost:8080/api
VITE_TURNSTILE_SITE_KEY=CHANGE_THIS_TO_TURNSTILE_SITE_KEY
