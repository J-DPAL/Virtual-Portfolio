##############################################################################
# Maven Wrapper - Downloads and runs Maven if not installed
##############################################################################

MAVEN_PROJECTBASEDIR=${MAVEN_BASEDIR:-$(pwd)}
MAVEN_WRAPPERJAR="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.jar"
MAVEN_WRAPPERPROPERTIES="${MAVEN_PROJECTBASEDIR}/.mvn/wrapper/maven-wrapper.properties"

# Download Maven if needed
if [ ! -f "$MAVEN_WRAPPERJAR" ]; then
    echo "Downloading Maven wrapper..."
    mkdir -p "$(dirname "$MAVEN_WRAPPERJAR")"
fi

# For Windows/PowerShell
# Use: .\mvnw.cmd clean install -DskipTests
